<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.eralp.circleprogressviewsample.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.eralp.circleprogressview.CircleProgressView
            android:id="@+id/circle_progress_view1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cpv_circle_color="#27375c"
            app:cpv_circle_width="6dp"
            app:cpv_background_circle_width="1dp"
            app:cpv_background_circle_color="#5b253048"
            app:cpv_text_suffix="%"
            app:cpv_text_size="40"
            app:cpv_text_color="#27375c"/>

        <com.eralp.circleprogressview.CircleProgressView
            android:id="@+id/circle_progress_view2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cpv_circle_color="#eb7e2996"
            app:cpv_background_circle_color="#49360a38"
            app:cpv_text_prefix="~"
            app:cpv_text_size="30"
            app:cpv_text_color="#c36d29c1"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.eralp.circleprogressview.CircleProgressView
            android:id="@+id/circle_progress_view3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cpv_circle_color="#364c81"
            app:cpv_circle_width="30dp"
            app:cpv_background_circle_width="30dp"
            app:cpv_background_circle_color="#27375c"/>

        <com.eralp.circleprogressview.CircleProgressView
            android:id="@+id/circle_progress_view4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cpv_circle_color="#2b8676"
            app:cpv_background_circle_color="#275c53"
            app:cpv_text_prefix="%"
            app:cpv_text_size="40"
            app:cpv_text_color="#404040"
            app:cpv_progress="22"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
</LinearLayout>
